<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/navigationComponents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Navigation Components"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/flows"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flows"
        app:layout_constraintEnd_toEndOf="@id/navigationComponents"
        app:layout_constraintStart_toStartOf="@id/navigationComponents"
        app:layout_constraintTop_toBottomOf="@id/navigationComponents" />

</androidx.constraintlayout.widget.ConstraintLayout>